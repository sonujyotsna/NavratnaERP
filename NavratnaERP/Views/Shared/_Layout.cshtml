<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Navratna ERP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery-confirm-master/css/jquery-confirm.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Navratna ERP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Add Employee", "Index", "Employee")</li>
                    <li>@Html.ActionLink("Employee List", "ListofEmployee", "Employee")</li>
                    <li>@Html.ActionLink("I Card Employee- Navratna", "EmployeeIcard", "Employee")</li>
                    <li>@Html.ActionLink("I Card Employee- Manmohan B", "EmployeeIcardM", "Employee")</li>
                    <li>@Html.ActionLink("I Card Employee- Manmohan C", "EmployeeIcardMC", "Employee")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Navratna ERP</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/jquery-confirm-master/js/jquery-confirm.js"></script>
</body>
</html>
