

@{
    ViewBag.Title = "Family Details";
}

<h2>Add Family Details</h2>
<script src="~/Content/Pages/jquery-3.5.1.min.js"></script>
<script src="~/Content/Pages/EmployeeDetail.js"></script>

<div class="col-md-12">

    <div class="col-md-6">
        <label>EmpDetailsId</label>
        <input type="text" id="hdnEmpDetailsId" name="EmpDetailsId" class="form-control " readonly />
        <label>EmpId</label>
        <input type="text" id="txtEmpId" name="EmpId" class="form-control " value="@ViewBag.EmpId" readonly />
        <label>Family Member Name</label>
        <input type="text" id="txtFamilyMemberName" name="FamilyMemberName" class="form-control" />
        <label>Member Relation</label>
        <select type="text" id="ddlMemberRelation" name="MemberRelation" class="form-control " >
            <option>Mother</option>
            <option>Father</option>
            <option>Wife</option>
            <option>Daughter</option>
            <option>Son</option>
            <option>Sister</option>
            <option>Brother</option>
        </select>
        
        <label>Present Address</label>
        <input type="text" id="txtPresentAddress" name="PresentAddress" class="form-control" />


    </div>
    <div class="col-md-6">
        <label>Mobile No.</label>
        <input type="text" id="txtMobNo" name="MobNo" class="form-control" />
        <label>Alternet Mobile No.</label>
        <input type="text" id="txtAlternetMobNo" name="AlternetMobNo" class="form-control" />
        <label>Adhar Detail</label>
        <input type="text" id="txtAdharDetail" name="AdharDetail" class="form-control" />
        <label>Occupation</label>
        <input type="text" id="txtOccupation" name="Occupation" class="form-control " />
        <label>Company Name</label>
        <input type="text" id="txtCompanyName" name="CompanyName" class="form-control" />
        <button id="btnSave" value="submit" onclick=saveRegistration()>SAVE</button>

    </div>
   
   
</div>

<div class="col-sm-12">
    <h2>Family Details</h2>
    <table id="tblEmployeeDetail" border="1" class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <th>EmpDetailsId</th>
        <th>EmpId</th>
        <th>FamilyMemberName</th>
        <th>MemberRelation</th>
        <th>Present Address</th>

        <th>Mob No</th>
        <th>Alternet MobNo</th>
        <th>Adhar Detail</th>
        <th>Occupation</th>
        <th>Company Name</th>

        </thead>
        <tbody></tbody>
    </table>
</div>

